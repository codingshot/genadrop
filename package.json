  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "prod": "yarn run build && serve build",
    "lint": "eslint \"./**/*.{js,jsx}\"",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"**/*.+(js|jsx|json|css|md)\"",
    "prepare": "husky install",
    "doc": "jsdoc -c jsdoc.json",

    "build-near": "cd contract-near && rustup target add wasm32-unknown-unknown && cargo build --all --target wasm32-unknown-unknown --release && cp ./target/wasm32-unknown-unknown/release/greeter.wasm ../out/main.wasm",
    "deploy": "npm run build-near && near dev-deploy",
    "dev": "nodemon --watch contract -e ts --exec \"npm run deploy\"",
    "test-near": "npm run build-near && npm run test-near:unit && npm run test:integration",
      "test-near:unit": "cd contract-near && cargo test",
      "test-near:integration": "npm run test:integration:ts && npm run test-near:integration:rs",
        "test-near:integration:ts": "cd integration-tests/ts && npm run test-near",
        "test-near:integration:rs": "cd integration-tests/rs && cargo run --example integration-tests"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
